# abort script on any command that exit with a non zero value
set -e

commons_archive=commons-daemon-1.2.3-bin.tar.gz
jsvc_archive=jsvc-1.2.3.zip

if [[ -f ${commons_archive} ]] ; then
  echo "Commons Daemon Archive found"
else
  echo "Commons Daemon Archive not found"
  exit 1
fi
cp -r ${commons_archive} ${BOSH_INSTALL_TARGET}
unzip ${jsvc_archive}
cp -r jsvc ${BOSH_INSTALL_TARGET}
